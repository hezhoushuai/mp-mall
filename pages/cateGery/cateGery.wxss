/* pages/cateGery/cateGery.wxss */
page{
  height: 100%;
  overflow: hidden;
  background-color: #dedede;
  padding-bottom: 50px;
  box-sizing: border-box;
}

.container{
  padding: 5rpx 16rpx;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  overflow-x: hidden;
  align-items: center;
}

.search-list {
  margin-top: 8px;
  width: 350rpx;
  border-radius: 5px;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 2px 2px rgba(10,16,20,.24),0 0 2px rgba(10,16,20,.12);
}

.search-list .search-img{
  width: 350rpx;
  height: 350rpx;
  vertical-align: top;
}

.search-list .search-title{
  width: 350rpx;
  height: 32px;
  font-size: 12px;
  line-height: 16px;
  display: block;
  overflow: hidden;
  letter-spacing: .5px;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #666666;
  margin: 4px 0;
}
.search-list .search-price{
  color: #f00;
  font-size: 14px;
}

.search-salenum {
  color: #666666;
}

.topBar{
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  height: 37px;
  overflow: hidden;
  border-bottom: 1px solid yellowgreen;
}

.topBar button{
  width: 250rpx;
  height: 40px;
  font-size: 12px;
  border-radius: 0;
  line-height: 40px;
  border: 0;
}

.topBar .current{
  color: #f00;
  padding: 0;
  margin: 0;
  background: rgb(177, 169, 169);
}

.add-to-cart{
  font-size: 12px;
  color: #fff;
  background-color: #f00;
  height: 28px;
  line-height: 28px;
  border-radius:0;
  width: 100%;
  border: 0 ;
  margin-top: 4px;
}