/* pages/mall/mall.wxss */
page {
  display: flex;
  height: 100%;
  overflow: hidden;
}

.mall-list{
  display: flex;
  flex-direction: column;
  overflow-x: hidden; 
}

.itemize{
  display: flex;
  overflow-x: hidden; 
  flex: 1;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  padding: 8px;
}

.itemize::after {
  content: "";
  flex: auto;
}

.itemize .itemize-detail{
  width: 31%;
  text-align: center;
  height: 120px;
  margin-bottom: 8px;
  border: 1px solid #eeeeee;
  border-radius: 5px;
  color: #666;
  box-shadow:  0 2px 2px rgba(10,16,20,.24),0 0 2px rgba(10,16,20,.12);
}

.itemize .itemize-detail image{
  height: 95px;
  width: 95px;
}

.mall-list .mall-list-title{
  text-align: center;
  width: 150rpx;
  display: inline-block;
  padding: 8px;
  margin-bottom: 1px;
  background-color: #fff;
  color: #666;
  position: relative;
}

.mall-list .current {
  background-color: #1fbcb5;
  color: #fff;
}

.current::before {
  content: "";
  width: 4px;
  height: 16px;
  background: #f00;
  position: absolute;
  left: 5rpx;
  border-radius: 3px;
}